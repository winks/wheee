<div id="base">
<% render("views._navi") %>
  <div class="main">
    <h1><%= page.name %></h1>
    <div class="post">
<%- page.body_html %>
    </div>
      <div class="postmeta">
      Rev <%= page.rev %> by <a href="/u/<%= author.username %>"><%= author.username %></a>
<% if session.current_user.id > 0 then -%>
      &ndash; (<a href="<%= url_for("page_edit") %>?page=<%= page.name %>">edit</a>)
<% end -%>
      </div>
<%- bottom_raw or "" %>
  </div>
</div>
